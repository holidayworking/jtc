.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:posts, :index)
      %li=link_to pat(:new), url(:posts, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:posts)
    .inner
      %table.table
        %tr
          %th.first=mat(:post, :id)
          %th=mat(:post, :title)
          %th=mat(:post, :url)
          %th=mat(:post, :content)
          %th=mat(:post, :date_published)
          %th=mat(:post, :category_id)
          %th.last="&nbsp;"
        -@posts.each do |post|
          %tr
            %td.first=post.id
            %td=post.title
            %td=post.url
            %td=post.content
            %td=post.date_published
            %td=post.category_id
            %td.last
              =button_to pat(:edit), url(:posts, :edit, :id => post.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:posts, :destroy, :id => post.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
